<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_final"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/peach_border_fill_lime"
        app:cardCornerRadius="35dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/peach_border_fill_lime"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="Sign Up"
                android:textAlignment="center"
                android:textColor="@color/peach"
                android:textSize="36sp"
                android:textStyle="bold" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="25dp">

                    <EditText
                        android:id="@+id/signup_email"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bottom_line"
                        android:drawableLeft="@drawable/ic_baseline_email_24"
                        android:drawablePadding="8dp"
                        android:hint="Email"
                        android:padding="8dp"
                        android:textColor="@color/dark_green"
                        android:inputType="textEmailAddress" />

                    <EditText
                        android:id="@+id/signup_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bottom_line"
                        android:drawableLeft="@drawable/ic_baseline_person_24"
                        android:drawablePadding="8dp"
                        android:hint="Name"
                        android:padding="8dp"
                        android:textColor="@color/dark_green"
                        android:inputType="textPersonName"/>


                    <EditText
                        android:id="@+id/signup_username"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bottom_line"
                        android:drawableLeft="@drawable/ic_username"
                        android:drawablePadding="8dp"
                        android:hint="Username"
                        android:padding="8dp"
                        android:textColor="@color/dark_green" />

                    <EditText
                        android:id="@+id/signup_password"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bottom_line"
                        android:drawableLeft="@drawable/ic_password"
                        android:drawablePadding="8dp"
                        android:hint="New password"
                        android:padding="8dp"
                        android:textColor="@color/dark_green"
                        android:inputType="textPassword" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="At least 1 upper case"
                        android:textSize="12dp"
                        android:paddingStart="10dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/peach"
                        android:id="@+id/signup_upper"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="At least 1 lower case"
                        android:textSize="12dp"
                        android:paddingStart="10dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/peach"
                        android:id="@+id/signup_lower"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="At least 1 number "
                        android:textSize="12dp"
                        android:paddingStart="10dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/peach"
                        android:id="@+id/signup_digit"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="At least 8 characters"
                        android:textSize="12dp"
                        android:paddingStart="10dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/peach"
                        android:id="@+id/signup_charCounter"/>

                    <EditText
                        android:id="@+id/signup_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bottom_line"
                        android:drawableLeft="@drawable/ic_password"
                        android:drawablePadding="8dp"
                        android:hint="Confirm password"
                        android:padding="8dp"
                        android:textColor="@color/dark_green"
                        android:inputType="textPassword" />

                    <TextView
                        android:id="@+id/signup_validate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingStart="10dp"
                        android:text="Password doesn't match..."
                        android:textColor="@color/peach"
                        android:textSize="12dp"
                        tools:visibility="gone" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/smole_green_background"
                        android:onClick="createUser"
                        android:text="Sign Up"
                        android:textColor="@color/dark_green"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:onClick="openSignIn"
                        android:text="Already a user? Login"
                        android:textAlignment="center"
                        android:textColor="@color/peach"
                        android:textSize="16sp" />

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>